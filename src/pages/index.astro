---
import Layout from '../layouts/Layout.astro';

import FixBtn from '../components/top/FixBtn.astro';
import TopHeadWrapper from '../components/top/TopHeadWrapper.astro';
import Kv from '../components/top/Kv.astro';
import About from '../components/top/About.astro';
import Information from '../components/top/Information.astro';
import Sponsors from '../components/top/Sponsors.astro';
import LookingForSponsors from '../components/top/LookingForSponsors.astro';
import Footer from '../components/Footer.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<FixBtn />
	<main class="main">
		<TopHeadWrapper>
			<Kv />
			<About />
		</TopHeadWrapper>
		<div class="fix-wrapper" data-trigger="fix-btn">
			<Information />
			<Sponsors />
		</div>
		<LookingForSponsors />
	</main>
	<Footer />
</Layout>

<style>
	@layer base {
		:global(.reading-inner) {
			max-width: 760px;
			margin-inline: auto;
		}
		:global(h2) {
			font-size: rem(40);
			font-weight: 600;
			text-align: center;
			color: var(--color_primary);
		}
		:global(.line-heading) {
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 24px;
			margin-bottom: 64px;
			:global(span) {
				font-size: rem(24);
				font-weight: 600;
				flex-shrink: 0;
			}
			&:before,
			&:after {
				content: '';
				flex: 1 1 100%;
				height: 1px;
				background-color: var(--color_grey);
			}
		}
		@media (--sp) {
			:global(h2) {
				font-size: rem(24);
			}
			:global(.line-heading) {
				gap: 20px;
				margin-bottom: 40px;
				:global(span) {
					font-size: rem(20);
				}
			}
		}
	}
</style>