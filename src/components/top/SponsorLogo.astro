---
import { Image } from 'astro:assets';

interface Props {
  level: 'kyoku' | 'matsu' | 'ume' | 'other';
  href?: string | '#';
  img?: ImageData;
  alt?: string;
}
const { level, href = '#', img = null, alt = null } = Astro.props;

---

<div class={`sponsor-logo ${level}`}>
  <a href={href} target="_blank">
    {img && (
      <Image src={img} alt={alt} />
    )}
  </a>
</div>

<style>
  @layer components {
    .sponsor-logo {
      border: 1px solid var(--color_grey);
      aspect-ratio: 13 / 5;
      img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }
    .kyoku {
      width: 520px;
    }
    .matsu {
      width: 480px;
    }
    .ume {
      width: 320px;
    }
    .other {
      width: 480px;
    }
    @media (--sp) {
      .kyoku {
        width: 248px;
      }
      .matsu {
        width: 200px;
      }
      .ume {
        width: 140px;
      }
      .other {
        width: 200px;
      }
    }
  }
</style>