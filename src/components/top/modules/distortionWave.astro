---
interface Props {
  imageSrc: string;
  width?: number | null;
  height?: number | null;
  maskRadius?: number | null;
}
const { imageSrc, width = null, height = null, maskRadius = null }: Props = Astro.props;
---

<canvas
  data-hover-effect="wave"
  data-width={width}
  data-height={height}
  data-image={imageSrc}
  data-mask-radius={maskRadius}
></canvas>

<script>
  import { hoverWaves } from '@/scripts/hoverWaves.ts';
  hoverWaves();
</script>
