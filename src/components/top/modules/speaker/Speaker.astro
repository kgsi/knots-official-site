---
import styles from './Speaker.module.css'
import { Image } from "astro:assets"

interface Props {
  name?: string;
  affiliation?: string;
  img?: ImageMetadata;
  modifier?: string;
  sns?: string;
  introduction?: string;
}

const { name='', affiliation='', img='', modifier=null, sns='', introduction='' } = Astro.props

const WrapperTag = sns ? 'a' : 'div'
const wrapperProps = sns ? { href: sns, target: '_blank', rel: 'noopener noreferrer' } : {}
---

<div class={styles.speaker + (modifier ? ` ${styles[modifier]}` : '')}>
  <WrapperTag {...wrapperProps} class={styles.avatar}>
    {img && (
      <Image src={img} alt='' class="util-img-cover"/>
    )}
  </WrapperTag>
  <div class={styles.speakerDetail}>
    <p class={styles.name}>{name}</p>
    <p class={styles.affiliation}>{affiliation}</p>
    {introduction && <p class={styles.introduction}>{introduction}</p>}
  </div>
</div>