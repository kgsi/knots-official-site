---
import styles from './SessionItem.module.css'

interface Props {
  sessionTag?: string;
  title?: string;
  description?: string;
}

const { sessionTag="", title="", description="" } = Astro.props
---

<div class={styles.sessionItem}>
  <div class={styles.column}>
    <p class={styles.tag}>{sessionTag}</>
    <h3 class={styles.title}>{title}</h3>
    <p class={styles.description}>{description}</p>
  </div>
  <div class={styles.column}>
    <div class={styles.speakers}>
      <slot />
    </div>
  </div>
</div>