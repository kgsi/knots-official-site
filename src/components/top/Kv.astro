---
import { Image } from 'astro:assets';
import logo from '@assets/common/logo_knots.svg';
import Btn from '@/components/util/Btn.astro';
---

<div class="kv">
  <div class="inner">
    <hgroup class="hgroup">
      <h1 class="logo">
        <Image src={logo} alt="KNOTS" width="681" height="152" class="logo-img"/>
      </h1>
      <p class="catch">デザイン・AI・エンジニアリング<br>境界を結び、共創をひらくカンファレンス</p>
    </hgroup>
    <div class="info">
      <div class="meta" data-trigger="header-active">
        <span class="date font-en">
          <span class="date-body">2026.01.25</span>
          <span class="day-of-week"><span class="parentheses">(</span>SUN<span class="parentheses">)</span></span>
        </span>
        <span class="place">@東京都中央区日本橋 日本橋タワー<span class="pc-space"></span><br class="only-sp">サイボウズ本社スペース</span>
      </div>
      <div class="btn-wrapper">
        <Btn href="#looking-for-sponsors" txt="チケット購入" modifier="kv"/>
        <a href="#looking-for-sponsors" class="text-link">スポンサー申し込みについて</a>
      </div>
    </div>
  </div>
</div>

<style>
  @layer components {
    .kv {
      color: var(--color_white);
      text-align: center;
      container-type: inline-size;
    }
    .logo {
      width: 100%;
      max-width: 680px;
      overflow: hidden;
      margin: 0 auto 38px;
    }
    .logo-img {
      width: 100%;
      height: auto;
    }
    .catch {
      text-box: trim-both cap alphabetic;
      font-feature-settings: 'palt' on;
      font-size: rem(28);
      font-weight: 600;
      line-height: 1.45;
    }
    .info {
      padding-block: 104px 86px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      column-gap: 20px;
      row-gap: 64px;
      container-type: inline-size;
      @container (max-width: 1400px) {
        justify-content: center;
        flex-direction: column;
      }
    }
    .meta {
      flex: 0 0 auto;
      display: grid;
      text-box: trim-both cap alphabetic;
      justify-items: center;
      row-gap: 16px;
    }
    .date {
      display: flex;
      align-items: baseline;
    }
    .date-body {
      font-size: rem(98);
      font-weight: 500;
    }
    .day-of-week {
      margin-left: 0.3em;
      font-size: rem(34);
      font-weight: 500;
      letter-spacing: -0.008em;
      leading-trim: both;
      text-edge: cap;
      .parentheses {
        vertical-align: 0.08em;
      }
    }
    .place {
      font-feature-settings: 'halt' on, 'palt' on;
      font-size: rem(24);
      font-weight: 600;
      letter-spacing: -0.02em;
    }
    .btn-wrapper {
      flex: 0 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      row-gap: 24px;
      padding-top: 8px;
    }
    .text-link {
      font-size: rem(18);
      background-image: linear-gradient(currentColor, currentColor);
      background-size: 100% 1px;
      background-repeat: no-repeat;
      background-position: bottom;
      transition: opacity 0.3s ease;
      @media (--hover) {
        &:hover {
          opacity: 0.8;
        }
      }
    }
    @media (--tb) {
      .logo {
        width: vwTb(528);
        margin-bottom: vwTb(24);
      }
      .catch {
        font-size: vwTb(24);
      }
      .info {
        padding-block: vwTb(56) vwTb(100);
        row-gap: 56px;
      }
      .meta {
        row-gap: vwTb(8);
      }
      .date-body {
        font-size: rem(64);
        font-weight: 500;
      }
      .day-of-week {
        font-size: rem(22);
      }
      .place {
        line-height: 1.0;
        font-size: rem(15);
      }
    }
    @media (--sp) {
      .logo {
        width: vw(300);
        margin-inline: auto;
        margin-bottom: 20px;
      }
      .logo-img {
        width: 100%;
        height: auto;
      }
      .catch {
        width: vw(300);
        margin-inline: auto;
        font-size: vw(16);
      }
      .info {
        display: flex;
        flex-direction: column;
        padding-block: vw(50) 40px;
        border-bottom: 1px solid rgb(255 255 255 / 0.6);
        row-gap: 56px;
      }
      .meta {
        row-gap: 10px;
      }
      .date {
        font-size: rem(16);
      }
      .date-body {
        font-size: rem(32);
      }
      .day-of-week {
        font-size: rem(16);
      }
      .place {
        font-size: rem(14);
        line-height: 1.3;
      }
      .btn-wrapper {
        width: stretch;
        padding-block: 0;
        row-gap: 28px;
        padding-inline: 20px;
      }
      .text-link {
        font-size: rem(16);
      }
    }
  }
</style>