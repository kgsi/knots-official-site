---
import Image from "astro/components/Image.astro"
import PictureComponent from '@/components/util/PictureComponent.astro';
import ScrollSmoothWrapper from '@/components/util/ScrollSmoothWrapper.astro';
import lower_wave from '@/assets/common/wave_lower.png';
import lower_wave_sp from '@/assets/common/wave_lower_sp.png';
---

<ScrollSmoothWrapper>
  <main class="lower-main">
		<div class="wave">
      <PictureComponent
        mobileImgUrl={lower_wave_sp}
        tabletImgUrl={lower_wave_sp}
        desktopImgUrl={lower_wave}
        alt=""
      />
    </div>
    <div class="lower-content">
      <slot />
    </div>
  </main>
</ScrollSmoothWrapper>

<style>
  @layer components {
    .lower-main {
      padding-block: 148px 160px;
      position: relative;
      background-color: var(--color_bg_white);
    }
    .wave {
      position: fixed;
      top: 102px;
      left: 0;
      width: 100%;
      min-width: 0;
      aspect-ratio: 1440 / 854;
      mix-blend-mode: overlay;
      z-index: var(--z_over);
      pointer-events: none;
    }
    .lower-content {
      position: relative;
      z-index: var(--z_over);
    }
    @media (--sp) {
      .lower-main {
        padding-block: 160px 100px;
      }
      .wave {
        top: 0;
      }
    }
  }
</style>

