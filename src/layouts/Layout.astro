---
import "../styles/global.css";
import "../styles/media.css";
import "../styles/reset.css";

const canonicalURL = new URL(Astro.url.pathname, 'https://knots.crossrel.jp/');
const ogpImageURL = new URL('/ogp.png', canonicalURL);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!--Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <meta name="generator" content={Astro.generator} />
    <title>KNOTS┃デザイン・AI・エンジニアリングをテーマとした次世代テックカンファレンス</title>
    <meta
      name="description"
      content="デザイン・AI・エンジニアリング、先端 ウェブ・プロダクトの潮流が&quot;交わる&quot;次世代テックカンファレンス"
    />

    <!-- Open Graph Protocol -->
    <meta
      property="og:title"
      content="KNOTS┃デザイン・AI・エンジニアリングをテーマとした次世代テックカンファレンス"
    />
    <meta
      property="og:description"
      content="デザイン・AI・エンジニアリング、先端 ウェブ・プロダクトの潮流が&quot;交わる&quot;次世代テックカンファレンス"
    />
    <meta property="og:image" content={ogpImageURL} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="KNOTS┃デザイン・AI・エンジニアリングをテーマとした次世代テックカンファレンス"
    />
    <meta
      name="twitter:description"
      content="デザイン・AI・エンジニアリング、先端 ウェブ・プロダクトの潮流が&quot;交わる&quot;次世代テックカンファレンス"
    />
    <meta name="twitter:image" content={ogpImageURL} />



    <!-- Font -->
    <link rel="stylesheet" href="https://use.typekit.net/ixx0wgf.css">
    <link rel="stylesheet" href="https://morisawafonts.net/c/01K5X3Y8N3AVASGV3JMEPG3NEM/mf.css">

    <meta name="robots" content="noindex">

  </head>
  <body>
    <div class="root">
      <slot />
    </div>
  </body>
</html>

<style>
  @layer base {
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
    .root {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      > :global(.footer) {
        margin-top: auto;
      }
    }
  }
</style>
